<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>Products</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Brand</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= number_to_currency(product.price) %></td>
              <td><%= product.quantity %></td>
              <td><%= product.description.html_safe %></td>
              <td><%= product.brand.name %></td>
              <td><%= product.category.name %></td>
              <td><%= link_to fa_icon('eye', class: 'fa-lg'), product %></td>
              <td><%= link_to fa_icon('pencil', class: 'fa-lg'), edit_product_path(product) %></td>
              <td><%= link_to fa_icon('trash', class: 'fa-lg'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= link_to 'New Product', new_product_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
