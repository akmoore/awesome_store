<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h1>Editing <%= @product.name %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <%= render 'form', product: @product %>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <%= link_to 'Show', @product, class: "btn btn-default" %>
            <%= link_to 'Back', products_path, class: "btn btn-default" %>
            <br><br>
        </div>
    </div>
</div>